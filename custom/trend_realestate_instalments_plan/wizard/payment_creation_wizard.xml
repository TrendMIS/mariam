<?xml version="1.0"?>
<odoo>
    <record id="payment_creation_wizard_form" model="ir.ui.view">
        <field name="name">payment.creation.wizard.form</field>
        <field name="model">payment.creation.wizard</field>
        <field name="arch" type="xml">
            <form>
                <h3>
                    Choose instalments to create its payments
                </h3>
                <field name="installment_ids" options="{'create': false}"/>
                <footer>
                    <button name="confirm_payment" string="Create Payments" type="object"
                            class="oe_highlight"/>
                    or
                    <button string="Close" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
