<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="crm_lead_view_form_inherit" model="ir.ui.view">
            <field name="name">crm.lead.view.form.inherit.international</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='opportunity_partner']" position="inside">
                    <field name="international_phone" string="International Phone" widget="phone"/>
                    <field name="extra_phone" string="Extra Phone" widget="phone"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>